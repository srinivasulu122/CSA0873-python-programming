def count_vowels_and_consonants(statement):
    vowels = "aeiouAEIOU"
    vowel_count = 0
    consonant_count = 0

    for char in statement:
        if char.isalpha():
            if char in vowels:
                vowel_count += 1
            else:
                consonant_count += 1

    print(f"Number of vowels: {vowel_count}")
    print(f"Number of consonants: {consonant_count}")

    if vowel_count > consonant_count:
        print("Vowels are more.")
    elif consonant_count > vowel_count:
        print("Consonants are more.")
    else:
        print("The number of vowels and consonants is the same.")

statement = "Hello, how are you today?"
count_vowels_and_consonants(statement)
